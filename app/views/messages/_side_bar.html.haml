.Side__bar
  %div.LeftHeader
    %div.LeftHeader__list
      %h3.LeftHeader__userName
        = current_user.name
      %ul.LeftHeader__iconList
        %li.LeftHeader__Icon
          -# = link_to "https://chatspace-2020.herokuapp.com/groups/new", class: "Contents__btn" do
          = link_to new_group_path, class: "Contents__btn" do
            = icon('far', 'edit')
        %li.LeftHeader__Icon
          -# = link_to "https://chatspace-2020.herokuapp.com/users/408/edit", class: "Contents__btn" do
          = link_to edit_user_path(current_user), class: "Contents__btn" do
            = icon('fas', 'cog')
  %div.Grouplist
    - current_user.groups.each do |group|
      %div.Group
        = link_to '#' do
          %div.Group__name
            = group.name
          %div.Group__message
            メッセージがまだありません